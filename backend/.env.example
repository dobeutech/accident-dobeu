# FleetGuard Backend Environment Variables
# Copy this file to .env and fill in your values

# ======================
# Database Configuration
# ======================
DATABASE_URL=postgresql://username:password@localhost:5432/fleetguard
# Or use individual components:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=fleetguard
# DB_USER=username
# DB_PASSWORD=password

# ======================
# Authentication
# ======================
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ======================
# AWS S3 Configuration
# ======================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=fleetguard-files
# S3 signed URL expiration (seconds)
S3_URL_EXPIRATION=900

# ======================
# Server Configuration
# ======================
PORT=3001
NODE_ENV=development
# Allowed origins for CORS (comma-separated)
CORS_ORIGIN=http://localhost:5173,http://localhost:8081

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# Logging
# ======================
LOG_LEVEL=info
# Options: error, warn, info, http, verbose, debug, silly

# ======================
# RMIS Integration (Optional)
# ======================
# These are set per-fleet in the database, but you can set defaults here
# ORIGAMI_RISK_BASE_URL=https://api.origamirisk.com
# RISKONNECT_BASE_URL=https://api.riskonnect.com

# ======================
# Email Configuration (Optional)
# ======================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# EMAIL_FROM=noreply@fleetguard.app

# ======================
# Redis Configuration (Optional - for session storage)
# ======================
# REDIS_URL=redis://localhost:6379
