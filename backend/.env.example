# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=accident_app
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=10000
DB_CONNECTION_TIMEOUT=2000

# JWT Configuration
JWT_SECRET=your_very_long_random_secret_key_here_min_32_chars
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-bucket-name

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# Session Configuration
SESSION_SECRET=your_session_secret_here_min_32_chars
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@yourdomain.com

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_SWAGGER_DOCS=false
ENABLE_DEBUG_LOGGING=false
ENABLE_METRICS=true

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# WebSocket
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# AI Image Validation
AI_PROVIDER=aws_rekognition
AI_MIN_CONFIDENCE=70

# Telematics & Kill Switch
ENCRYPTION_KEY=your_encryption_key_min_32_chars_here
KILL_SWITCH_AUTO_ENGAGE=true
KILL_SWITCH_TIMEOUT_HOURS=24
